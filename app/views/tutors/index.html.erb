<% title "Listing Tutors" %>
<h1>Listing Tutors</h1>
<% if can? :create, Tutor %>
<%= link_to 'New Tutor', new_tutor_path, :class => "ss_sprite ss_add" %>
<% end %>
<div class="float_right"> <%= link_to "View All", :action => "index" %> | <a id="search" href="#search_form" rel="facebox" class="ss_sprite ss_find">Advanced Search</a></div>
<div id="search_form" class="hide">
  <%= render "search" %>
</div>
<table>
  <tr>
    <th>Tutor No</th>
    <th>Tutor Name</th>
    <th>Tutor Address</th>
    <th>Tutor Phone</th>
    <th>Tutor Handphone</th>
    <th colspan="3">Action</th>
  </tr>

<% @tutors.each do |tutor| %>
  <tr>
    <td><%=h tutor.tutor_no %></td>
    <td><%=h tutor.tutor_name %></td>
    <td><%=h tutor.tutor_address %></td>
    <td><%=h tutor.tutor_phone %></td>
    <td><%=h tutor.tutor_handphone %></td>
    <td><%= link_to 'Show', tutor, :class => "ss_sprite ss_zoom" %></td>
    <% if can? :edit, Tutor %>
    <td><%= link_to 'Edit', edit_tutor_path(tutor), :class => "ss_sprite ss_pencil" %></td>
    <% end %>
    <% if can? :delete, Tutor %>
    <td><%= link_to 'Destroy', tutor, :confirm => 'Are you sure?', :method => :delete , :class => "ss_sprite ss_delete" %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />
<%= will_paginate @tutors %>
