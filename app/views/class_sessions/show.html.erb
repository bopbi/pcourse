<% title "Class Session Detail" %>
<p>
  <b>Course Type:</b>
  <%=h @class_session.course_type.course_type_name rescue nil %>
</p>

<p>
  <b>Class session name:</b>
  <%=h @class_session.class_session_name %>
</p>

<p>
  <b>Day:</b>
  <%= @day[@class_session.day.to_i][0] %>
</p>

<p>
  <b>Start:</b>
  <%=h @time[@class_session.start.to_i] %>
</p>


<%= link_to 'Edit', edit_class_session_path(@class_session) %> |
