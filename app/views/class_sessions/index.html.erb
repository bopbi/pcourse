<% title "Listing Class Session" %>
<h1>Listing Class Sessions</h1>
<%= link_to 'New Class Session', new_class_session_path %>
<table>
  <tr>
    <th>Course Type</th>
    <th>Class session name</th>
    <th>Day</th>
    <th>Start</th>
    <th colspan="3">Action</th>
  </tr>

<% @class_sessions.each do |class_session| %>
  <tr>
    <td><%=h class_session.course_type.course_type_name rescue nil %></td>
    <td><%=h class_session.class_session_name %></td>
    <td><%=h class_session.day %></td>
    <td><%=h class_session.start %></td>
    <td><%= link_to 'Show', class_session %></td>
    <td><%= link_to 'Edit', edit_class_session_path(class_session) %></td>
    <td><%= link_to 'Destroy', class_session, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
<%= will_paginate @class_sessions %>
