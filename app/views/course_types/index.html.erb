<h1>Listing Course Types</h1>
<% if can? :create, CourseType %>
<%= link_to 'New Course Type', new_course_type_path, :class => "ss_sprite ss_add" %>
<% end %>
<div class="float_right"> <%= link_to "View All", :action => "index" %> | <a id="search" href="#search_form" rel="facebox" class="ss_sprite ss_find">Advanced Search</a></div>
<div id="search_form" class="hide">
  <%= render "search" %>
</div>
<table>
  <tr>
    <th>Course Type Name</th>
    <th>Course Type Fee</th>
    <th colspan="3">Action</th>
  </tr>

<% @course_types.each do |course_type| %>
  <tr>
    <td><%=h course_type.course_type_name %></td>
    <td><%=h course_type.course_type_fee %></td>
    <td><%= link_to 'Show', course_type, :class => "ss_sprite ss_zoom" %></td>
    <% if can? :edit, CourseType %>
    <td><%= link_to 'Edit', edit_course_type_path(course_type), :class => "ss_sprite ss_pencil" %></td>
    <% end %>
    <% if can? :delete, CourseType %>
    <td><%= link_to 'Destroy', course_type, :confirm => 'Are you sure?', :method => :delete , :class => "ss_sprite ss_delete" %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />
<%= will_paginate @course_types %>
