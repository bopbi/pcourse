<h1>New Tutor Attendance</h1>

<% form_for(@tutor_attendance) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :tutor_id %><br />
    <%= f.collection_select :tutor_id, Tutor.all , :id, :tutor_name %>
  </p>
  <p>
    <%= f.label :class_session_id %><br />
    <%= f.collection_select :class_session_id, ClassSession.all , :id, :class_session_name %>
  </p>
  <p>
    <%= f.label :attendance_day %><br />
    <%= f.date_select :attendance_day %>
  </p>
  <p>
    <%= f.label :attendance %><br />
    <%= f.check_box :attendance %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', tutor_attendances_path %>