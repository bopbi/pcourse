<% title "Login" %>
<% form_for @user_session do |f| %>
<% a = error_messages_for :user_session, :id => "err", :header_message => "", :message => "" %>
<% flash[:notice] = a if !a.blank? %>
<div id="login_box">
	<h3>Please Login</h3>
	  <p>
	    <%= f.label :username %><br />
	    <%= f.text_field :username %>
	  </p>
	  <p>
	    <%= f.label :password %><br />
	    <%= f.password_field :password %>
	  </p>
	  <div class="float_right"><%= f.submit "Login" %></div>
	  <div class="clear"></div>
</div>
<% end %>

