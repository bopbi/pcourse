<% title "Listing Student Payments" %>
<h1>Listing Student Payments</h1>
<%= link_to 'New Student Payment', new_student_payment_path, :class => "ss_sprite ss_add" %>
<div class="float_right"> <%= link_to "View All", :action => "index" %> | <a id="search" href="#search_form" rel="facebox" class="ss_sprite ss_find">Advanced Search</a></div>
<div id="search_form" class="hide">
  <%= render "search" %>
</div>
<table>
  <tr>
    <th>Student</th>
    <th>Month Payment</th>
    <th colspan="3">Action</th>
  </tr>

<% @student_payments.each do |student_payment| %>
  <tr>
    <td><%=h student_payment.student.name rescue nil %></td>
    <td><%=h student_payment.month_payment %></td>
    <td><%= link_to 'Show', student_payment, :class => "ss_sprite ss_zoom" %></td>
    <td><%= link_to 'Edit', edit_student_payment_path(student_payment), :class => "ss_sprite ss_pencil" %></td>
    <td><%= link_to 'Destroy', student_payment, :confirm => 'Are you sure?', :method => :delete, :class => "ss_sprite ss_delete" %></td>
  </tr>
<% end %>
</table>

<br />
<%= will_paginate @student_payments %>
