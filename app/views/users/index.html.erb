<% title "Listing Users" %>
<h1>Listing Users</h1>
<%= link_to 'New User', new_user_path %>
<div class="float_right"> <%= link_to "View All", :action => "index" %> | <a id="search" href="#search_form" rel="facebox">Advanced Search</a></div>
<div id="search_form" class="clear">
  <%= render "search" %>
</div>
<table>
  <tr>
    <th>Username</th>
    <th>Role</th>
    <th colspan="3">Action</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%=h user.username %></td>
    <td><%=h user.role %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
<%= will_paginate @users %>
