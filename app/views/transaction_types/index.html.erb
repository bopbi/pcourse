<h1>Listing Transaction Types</h1>
<%= link_to 'New Transaction Type', new_transaction_type_path %><table>
  <tr>
    <th>Transaction type code</th>
    <th>Transaction type name</th>
    <th>Debit</th>
    <th colspan="3">Action</th>
  </tr>

<% @transaction_types.each do |transaction_type| %>
  <tr>
    <td><%=h transaction_type.transaction_type_code %></td>
    <td><%=h transaction_type.transaction_type_name %></td>
    <td><%=h transaction_type.debit %></td>
    <td><%= link_to 'Show', transaction_type %></td>
    <td><%= link_to 'Edit', edit_transaction_type_path(transaction_type) %></td>
    <td><%= link_to 'Destroy', transaction_type, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
<%= will_paginate @transaction_types %>
